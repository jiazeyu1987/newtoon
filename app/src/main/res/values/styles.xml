<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GridViewText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/table_unit_width</item>
        <item name="android:layout_height">@dimen/table_unit_height</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColor">@color/active_txt_color1</item>
    </style>

    <style name="GridViewText3">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">@dimen/table_unit_height</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColor">@color/active_txt_color1</item>
    </style>

    <style name="GridViewText2">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColor">@color/active_txt_color1</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainFieldButton">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/active_txt_color1</item>
        <item name="android:fontFamily">@font/ping</item>
    </style>

    <style name="RoundRectButton2">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ping</item>
        <item name="android:background">@drawable/rect1</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:textColor">@color/active_txt_color1</item>
    </style>

    <style name="RoundRectButton3">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ping</item>
        <item name="android:background">@drawable/rect1</item>
        <item name="android:textColor">@color/active_txt_color1</item>
    </style>

    <style name="SmallText1">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/ping</item>
        <item name="android:textColor">@color/active_txt_color1</item>
    </style>

    <style name="RoundRectButton">
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/ping</item>
    </style>

    <style name="RoundRectButton.Active">
        <item name="android:background">@drawable/rect3</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RoundRectButton.DisActive">
        <item name="android:background">@drawable/rect4</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
