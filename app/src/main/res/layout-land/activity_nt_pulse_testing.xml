<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/aci_top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include layout="@layout/newtoon_nt_title"></include>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/aci_00"
        android:layout_width="@dimen/contact_info_width_half"
        android:layout_height="@dimen/contact_info_height_02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aci_top">

        <com.example.administrator.new_ptns.custom_item.CustomItem6
            android:id="@+id/customItem66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:txt1="患者信息"></com.example.administrator.new_ptns.custom_item.CustomItem6>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/active_txt_color1"
            app:layout_constraintStart_toStartOf="@+id/customItem66"
            app:layout_constraintTop_toBottomOf="@+id/customItem66">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/textView67"
                    style="@style/GridViewText"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:text="电极一" />

                <TextView
                    android:id="@+id/apt_electrode1_value"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    style="@style/GridViewText"
                    android:text="/" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/textView68"
                    android:layout_marginLeft="2dp"
                    style="@style/GridViewText"
                    android:text="电极二" />

                <TextView
                    android:id="@+id/apt_electrode2_value"
                    style="@style/GridViewText"
                    android:layout_marginRight="2dp"
                    android:text="/" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView70"
                    style="@style/GridViewText"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="合同号" />

                <TextView
                    android:id="@+id/apt_contact_number_value"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    style="@style/GridViewText"
                    android:text="/" />
            </TableRow>

        </TableLayout>


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/aci_10"
        android:layout_width="@dimen/contact_info_width_half"
        android:layout_height="@dimen/contact_info_height_01"
        app:layout_constraintBottom_toTopOf="@+id/aci_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aci_00" >


        <com.example.administrator.new_ptns.custom_item.CustomItem6
            android:id="@+id/customItem63"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:txt1="手术信息"></com.example.administrator.new_ptns.custom_item.CustomItem6>

        <TextView
            android:id="@+id/apt_operation_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:text="请将充电线圈对准刺激器：\n\n\n 刺激器未充电！"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/customItem63"
            app:layout_constraintTop_toBottomOf="@+id/customItem63" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/aci_11"
        android:layout_width="@dimen/contact_info_width_half"
        android:layout_height="@dimen/contact_info_height_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aci_top">

        <com.example.administrator.new_ptns.custom_item.CustomItem6
            android:id="@+id/customItem6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:txt1="患者家属信息"></com.example.administrator.new_ptns.custom_item.CustomItem6>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@color/active_txt_color1"
            app:layout_constraintStart_toStartOf="@+id/customItem6"
            app:layout_constraintTop_toBottomOf="@+id/customItem6">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/t3extView710"
                    style="@style/GridViewText"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="恒流输出" />

                <TextView
                    android:id="@+id/apt_current_value"
                    style="@style/GridViewText"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="0.5 mA" />

                <TextView
                    android:id="@+id/apt_current_state"
                    style="@style/GridViewText"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="正常" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/t2extView710"
                    style="@style/GridViewText"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="恒压输出" />

                <TextView
                    android:id="@+id/apt_voltage_value"
                    style="@style/GridViewText"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="1.0 V" />

                <TextView
                    android:id="@+id/apt_voltage_state"
                    style="@style/GridViewText"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="正常" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/t1extView710"
                    style="@style/GridViewText"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="阻抗状态" />

                <TextView
                    android:id="@+id/apt_impedance_value"
                    style="@style/GridViewText"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:text=">100 kΩ" />

                <TextView
                    android:id="@+id/apt_impedance_state"
                    style="@style/GridViewText"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="断路" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView59"
                    style="@style/GridViewText"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="电池电压" />

                <TextView
                    android:id="@+id/apt_battery_voltage_value"
                    style="@style/GridViewText"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:text="4.0 V" />

                <TextView
                    android:id="@+id/apt_battery_voltage_state"
                    style="@style/GridViewText"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:text="正常" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView618"
                    style="@style/GridViewText"
                    android:layout_marginLeft="2dp"
                    android:text="电池容量" />

                <TextView
                    android:id="@+id/apt_battery_number_value"
                    style="@style/GridViewText"
                    android:layout_marginRight="2dp"
                    android:text="95%" />

                <TextView
                    android:id="@+id/apt_battery_number_state"
                    style="@style/GridViewText"
                    android:layout_marginRight="2dp"
                    android:text="正常" />
            </TableRow>

        </TableLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/aci_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <Button
            android:id="@+id/apt_btn_testing"
            style="@style/RoundRectButton.Active"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="400dp"
            android:background="@drawable/rect_blue"
            android:text="测试"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ani_btn_shutdown"
            style="@style/RoundRectButton.Active"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="400dp"
            android:background="@drawable/rect_blue"
            android:text="关机"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
